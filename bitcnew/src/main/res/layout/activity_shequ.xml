<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4D4CE6"
    tools:context=".module.home.ShequActivity">
    <include
        layout="@layout/toolbar"
        android:visibility="gone" />

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="29dp" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/fanhui_white"
            />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/wodeshequ"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/fanhui_white"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingHorizontal="23dp"
        android:layout_marginTop="15dp">
        <com.bitcnew.widgets.CircleImageView
            android:id="@+id/ivHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_default_head" />
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivHead"
            android:text="Tfdsw2jk"
            android:textColor="@color/white"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/txt_shequrenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivHead"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="8dp"
            android:text="@string/shequrenshu"
            android:textColor="#ffeef4ff"
            android:textSize="11dp"
            />

        <TextView
            android:id="@+id/txt_yaoqingmashuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_shequrenshu"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="34dp"
            android:text="@string/yaoqingmashuliang"
            android:textColor="#ffeef4ff"
            android:textSize="11dp"
            />

        <TextView
            android:id="@+id/txt_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivHead"
            android:layout_marginTop="30dp"
            android:text="@string/shequzongjianglitfu"
            android:textColor="#ffeef4ff"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/txt_zongyongjinshouru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="#ffffffff"
            android:textSize="31dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt_v1"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/border_white_25dp_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/yaoqingma"
                android:textColor="#ff666666"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/zhuangtai"
                android:textColor="#ff666666"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/chengyuan"
                android:textColor="#ff666666"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/jianglitfu"
                android:textColor="#ff666666"
                android:textSize="14dp"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_buy"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/duihuanyaoqingma"
            android:textColor="#ffffffff"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/border_zi_23dp"
            android:layout_marginHorizontal="46dp"
            />
    </LinearLayout>
</LinearLayout>