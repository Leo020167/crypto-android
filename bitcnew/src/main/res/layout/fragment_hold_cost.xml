<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dip">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tvTolBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:gravity="center"
            android:text="@string/zongshuliangbtc"
            android:textColor="@color/c6175ae"
            android:textSize="@dimen/font_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAvgCostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/pingjunchengbenjia"
                android:textColor="@color/cff8f01"

                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tvProfitRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/yinglibili"
                android:textColor="@color/ccd5066"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/holdCostView"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_marginTop="25dip"
            android:background="@color/white"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/chengbenqujian"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dip"
                android:gravity="center"
                android:text="@string/shuliang"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dip"
                android:gravity="right"
                android:text="@string/bili"
                android:textColor="@color/c6175ae"
                android:textSize="@dimen/font_size_12" />


        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:nestedScrollingEnabled="false">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>