<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.bitcnew.module.home.RechargeCoinActivity2">
    <include layout="@layout/toolbar_with_text_menu" />

    <EditText
        android:id="@+id/et_jine"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:hint="@string/qingshuruchongzhijine"
        android:background="@drawable/border_gray2_5dp"/>
    <TextView
        android:id="@+id/txt_shangchuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shangchuanchongzhijietu"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:padding="60dp"
        android:textColor="@color/blue"/>
    <ImageView
        android:id="@+id/img_tu"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:visibility="gone"/>
</LinearLayout>