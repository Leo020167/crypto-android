<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pageBackground"
    tools:context=".module.home.BindPhoneActivity">
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="22dp"
        android:paddingTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvCountryName"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:gravity="center"
            android:layout_marginLeft="15dip"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="@string/zhongguo"
            android:drawablePadding="5dip"
            android:drawableRight="@drawable/ic_arrow_subscribe_price"
            android:textColor="#232323"
            android:textSize="@dimen/font_size_14"
            android:layout_marginTop="15dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="50dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/tvCountryCode"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textColor="#232323"
                android:textSize="@dimen/font_size_14"
                android:text="+852"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/ic_arrow_subscribe_price"/>
            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#dcdcdc"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <EditText
                android:layout_marginLeft="12dp"
                android:id="@+id/et_newPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/qingshurushoujihaoma"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="#232323"
                android:textColorHint="#c8c8c8"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>
        <View
            style="@style/dividerLine_horizontal"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip" />
        <LinearLayout
            android:id="@+id/llModifyPayPass2"
            android:layout_height="50dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/et_newSms"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/qingshuruyanzhengma"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="#232323"
                android:textColorHint="#c8c8c8"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_newVerfiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_verify"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:text="@string/huoquyanzhengma"
                android:textColor="@color/btn_verify"
                android:textSize="@dimen/font_size_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_wancheng"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/queding"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"
            android:background="@drawable/border_orange_5dp"/>
    </LinearLayout>
</LinearLayout>