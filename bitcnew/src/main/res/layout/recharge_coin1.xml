<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F4"
    android:orientation="vertical">

    <com.bitcnew.common.base.CommonToolbar
        android:id="@+id/commonToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:moreSrc="@drawable/ic_home_account_menu_logo"
        app:title="@string/chongbi" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bg_ffffff_14dp"
                android:orientation="vertical"
                android:padding="20dp">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/keyongyueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keyongyue_"
                        android:textColor="#A2A9BC"
                        android:textSize="14dp"
                        app:fontFamily="@font/puhuiti_medium" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/keyongyueTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#3E4660"
                        android:textSize="18dp"
                        app:fontFamily="@font/puhuiti_medium" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/zuixiaochongzhijineLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zuixiaochongzijine_"
                        android:textColor="#A2A9BC"
                        android:textSize="14dp"
                        app:fontFamily="@font/puhuiti_medium" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/zuixiaochongzhijineTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#3E4660"
                        android:textSize="18dp"
                        app:fontFamily="@font/puhuiti_medium" />

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_ffffff_14dp"
                android:orientation="vertical"
                android:padding="20dp">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xuanzebizhong"
                        android:textColor="#3E4660"
                        android:textSize="14dp"
                        app:fontFamily="@font/puhuiti_medium" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/xuanzetibiwangluoLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xuanzetibiwangluo"
                        android:textColor="#3E4660"
                        android:textSize="14dp"
                        app:fontFamily="@font/puhuiti_medium" />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/coinTypeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_3e4660_strike_3dp"
                        android:drawableRight="@drawable/sanjiaoxing_blue"
                        android:drawablePadding="10dp"
                        android:drawableTint="#3E4660"
                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:textColor="#3E4660"
                        android:textSize="16dp"
                        app:fontFamily="@font/puhuiti_medium"
                        tools:text="BTC" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:scrollbars="none">

                        <RadioGroup
                            android:id="@+id/coinSubTypeRadioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                        </RadioGroup>

                    </HorizontalScrollView>

                </android.support.v7.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/line_e2e4f0"
                    android:layerType="software" />

                <FrameLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    tools:background="#000">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivQr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/zhiyunxuchongzhiLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_ffffff_14dp"
                    android:backgroundTint="#6175AE"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/zhiyunxuchongzhi_"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chongbidizhi"
                        android:textColor="#3E4660"
                        android:textSize="14dp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/chainLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dangqianlianlu_label"
                        android:textColor="#3E4660"
                        android:textSize="14dp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/chainTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00BAB8"
                        android:textSize="18dp"
                        android:visibility="gone"
                        tools:text="ERC20"
                        tools:visibility="visible" />

                </android.support.v7.widget.LinearLayoutCompat>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/addressTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_edf3fa_6dp"
                        android:fontFamily="@font/puhuiti_medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#6175AE"
                        android:textColorHint="#A2A9BC"
                        android:textSize="11dp"
                        tools:text="0x8a449601e8f0920a0ccfdddec67ae5870f07c0fb" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/action_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/bg_copy"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="8dp"
                        android:text="@string/fuzhi"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </FrameLayout>

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_ffffff_14dp"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="20dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/chongzhishuliang"
                    android:textColor="#A2A9BC"
                    android:textSize="12dp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/amountEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_f6f7f9_5dp"
                    android:gravity="center_vertical"
                    android:hint="@string/qingshuruchongzhishuliang"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textSize="18dp"
                    app:fontFamily="@font/puhuiti_medium" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/shangchuanpingzheng"
                    android:textColor="#A2A9BC"
                    android:textSize="12dp" />

                <!--                <android.support.v7.widget.RecyclerView-->
                <!--                    android:id="@+id/recyclerView"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginLeft="7.5dp"-->
                <!--                    android:layout_marginRight="7.5dp"-->
                <!--                    android:nestedScrollingEnabled="true" />-->
                <FrameLayout
                    android:id="@+id/action_uploadImage"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/uploadPlaceholderView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_common_add" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/uploadImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/action_delUploadImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_pic_del"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/action_add"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_7270f8_4d4bda_5dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/chongzhiqueren"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:fontFamily="@font/puhuiti_medium" />

                </FrameLayout>

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>