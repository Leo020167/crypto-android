<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_with_text_menu" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dip">

                <TextView
                    android:id="@+id/tvAssetsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zongzichan"
                    android:textColor="@color/c999999"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/tvAssets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAssetsText"
                    android:layout_marginTop="5dip"
                    android:text="$45666666.36"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_size_18" />

                <TextView
                    android:id="@+id/tvBalanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/yue"
                    android:textColor="@color/c999999"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvBalanceText"
                    android:layout_marginTop="5dip"
                    android:text="$456.36"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_18" />


                <TextView
                    android:id="@+id/tvProfitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAssets"
                    android:layout_marginTop="8dip"
                    android:text="@string/yingkui"
                    android:textColor="@color/c999999"
                    android:textSize="@dimen/font_size_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvProfitText"
                    android:layout_marginTop="5dip">

                    <TextView
                        android:id="@+id/tvProfit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tvBalanceText"
                        android:text="$456.36"
                        android:textColor="@color/black"

                        android:textSize="@dimen/font_size_18" />

                    <TextView
                        android:id="@+id/tvProfitRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tvBalanceText"
                        android:layout_marginLeft="5dip"
                        android:text="+45%"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_size_16" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llOrderFollowBalanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvBalance"
                    android:layout_marginTop="8dip">

                    <TextView
                        android:id="@+id/tvOrderFollowBalanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gendanzongjine"
                        android:textColor="@color/c999999"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@color/red"
                        android:paddingBottom="2dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="2dip"
                        android:text="@string/zhuijia"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_10" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvOrderFollowBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/llOrderFollowBalanceText"
                    android:layout_marginTop="5dip"
                    android:text="$5000.00"
                    android:textColor="@color/c666666"
                    android:textSize="@dimen/font_size_18" />
                <TextView
                    android:id="@+id/tvOrderFollowBalanceUSDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvOrderFollowBalance"
                    android:text="USDT：5000.00"
                    android:textColor="@color/c666666"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="3dip"/>

            </RelativeLayout>

            <View style="@style/dividerLine_horizontal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dip">
                <TextView
                    android:id="@+id/tvOrderFollowUserText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gaoshou"
                    android:textColor="@color/c999999"
                    android:textSize="@dimen/font_size_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dip"
                    android:gravity="center_vertical"
                    android:layout_below="@id/tvOrderFollowUserText">


                    <com.bitcnew.widgets.CircleImageView
                        android:id="@+id/ivUser"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:src="@drawable/ic_default_head"/>

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张乃滔"
                        android:layout_marginLeft="5dip"
                        android:textColor="@color/c999999"
                        android:textSize="@dimen/font_size_12" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvGradeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/zonghepingfen"
                    android:textColor="@color/c999999"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/tvGrade"
                    android:layout_below="@id/tvGradeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="90"
                    android:layout_marginTop="8dip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_18" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/bencigendanchicangbeidong"
                android:textColor="@color/black"
                android:layout_marginLeft="12dip"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip">

                <View
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/c808080"
                    android:text="@string/yuezonge"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/c808080"
                    android:text="@string/yingkui"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOrderList"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/shezhiguanli"
                android:textColor="@color/black"
                android:layout_marginLeft="12dip"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:gravity="center_vertical"
                android:layout_marginTop="12dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/meicimairudegendanzuidajine"
                    android:textColor="@color/c444444"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/tvMaxAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$200"
                    android:textColor="@color/c444444"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/tvSetMaxAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:background="@color/red"
                    android:paddingBottom="2dip"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="2dip"
                    android:text="@string/xiugai"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="12dip"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zhiying"
                    android:textColor="@color/c444444"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/tvStopProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+25%"
                    android:textColor="@color/c444444"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/tvSetStopProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:background="@color/red"
                    android:paddingBottom="2dip"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="2dip"
                    android:text="@string/xiugai"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="12dip"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zhisun"
                    android:textColor="@color/c444444"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/tvStopLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-25%"
                    android:textColor="@color/c444444"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/tvSetStopLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:background="@color/red"
                    android:paddingBottom="2dip"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="2dip"
                    android:text="@string/xiugai"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_10" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/jiaoyimingxi"
                android:textColor="@color/black"
                android:layout_marginLeft="12dip"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>