<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/toolbar"
        >
        <!--layout_gravity编译器没有这个属性,不知道为何,估计是as的问题,但其实有效果-->
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tvMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/abc_item_background_holo_dark"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@string/jilu"
           />
        <!--android:src="@drawable/ic_transfer"-->

    </android.support.v7.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_margin="20dip"
        android:background="@drawable/transfer_bg"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:src="@drawable/ic_transfer_point" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cong"
                    android:textColor="@color/c663d3a50"
                    android:textSize="@dimen/font_size_14" />

                <View style="@style/dividerLine_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dao"
                    android:textColor="@color/c663d3a50"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llFrom"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFrom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dip"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/yuezhanghu"
                        android:textColor="@color/c3d3a50"
                        android:textSize="@dimen/font_size_14" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_marginRight="15dip"
                        app:srcCompat="@drawable/ic_svg_arrow_2" />


                </LinearLayout>

                <View style="@style/dividerLine_horizontal" />

                <LinearLayout
                    android:id="@+id/llTo"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTo"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:text="@string/guzhiqihuozhanghu"
                        android:gravity="center_vertical"
                        android:textColor="@color/c3d3a50"
                        android:textSize="@dimen/font_size_14" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_marginRight="15dip"
                        app:srcCompat="@drawable/ic_svg_arrow_2" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!--<View-->
        <!--style="@style/dividerLine_vertical"-->
        <!--android:layout_width="1dip" />-->

        <!--<TextView-->
        <!--android:id="@+id/tvSwitch"-->
        <!--android:layout_width="70dip"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center"-->
        <!--android:text="切换" />-->

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:text="@string/huazhuanshuliang"
        android:textColor="@color/c1d3155"
        android:textSize="@dimen/font_size_14" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip">

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_et_bg"
            android:gravity="center_vertical"
            android:hint="@string/shuruhuazhuanshuliang"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="18"
            android:maxLines="1"
            android:paddingRight="80dip"
            android:textColor="@color/c1d3155"
            android:textColorHint="#c8c8c8"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="55dip"
            android:text="USDT"
            android:textColor="@color/c666175ae"
            android:textSize="@dimen/font_size_14" />
        <View style="@style/dividerLine_vertical"
            android:layout_height="20dip"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="40dip"/>

        <TextView
            android:id="@+id/tvAll"
            android:layout_width="35dip"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:text="@string/quanbu"
            android:textColor="@color/c6175ae"
            android:textSize="@dimen/font_size_12"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvEnableAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:text="@string/keyongshuliang"
        android:textColor="@color/c666175ae"
        android:textSize="@dimen/font_size_12"
        android:layout_marginLeft="20dip"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginRight="20dip"
        android:lineSpacingExtra="@dimen/text_linespacingextra"
        android:background="@color/cf2f2f2"
        android:text="@string/zhiyoujiangzichanhuazhuandaoxiangduiyingde"
        android:textColor="@color/c663d3a50"
        android:textSize="@dimen/font_size_12"
        android:layout_marginLeft="20dip"
        android:padding="8dip"/>
</LinearLayout>
    <TextView
        android:id="@+id/tvTransferCoin"
        style="@style/btn_style_1"
        android:layout_marginBottom="15dip"
        android:text="@string/huazhuan" />
</LinearLayout>