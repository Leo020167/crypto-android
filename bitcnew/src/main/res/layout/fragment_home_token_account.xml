<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dip">
            <TextView
                android:id="@+id/txt_chakanruhehuoqutoken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c661d3155"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:text="@string/chakanruhehuoqutoken"
                android:textSize="@dimen/font_size_12"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTolAssetsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yuezhanghuzongzichanusdt"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvTolAssets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/c1d3155"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/tvTolAssetsCny"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="â‰ˆHK$0.00"
                            android:textColor="@color/c661d3155"
                            android:textSize="@dimen/font_size_12" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shizhi"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shizhiusdt"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvShizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keyongusdt2"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvEableBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dongjieusdt"
                        android:textColor="@color/c661d3155"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/tvFrozenBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="0"
                        android:textColor="@color/c1d3155"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/caiwujilu"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/c3d3a50"
                    android:layout_marginLeft="15dip"
                    />
                <TextView
                    android:id="@+id/tvAll"
                    android:layout_width="70dip"
                    android:layout_height="match_parent"
                    android:text="@string/quanbu"
                    android:gravity="center"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/c6175ae"
                    android:visibility="gone"/>
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tvNoData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="100dip"
                    android:text="@string/zanwujilu"
                    android:textColor="@color/c666175ae"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
    <!--android:nestedScrollingEnabled="false"-->


</android.support.v4.widget.NestedScrollView>