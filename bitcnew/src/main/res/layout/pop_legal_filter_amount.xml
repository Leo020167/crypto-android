<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        style="@style/dividerLine_horizontal"
        android:layout_height="1px" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:background="@color/cfafafa">

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="@drawable/xml_et_bg_4"
            android:gravity="left|center_vertical"
            android:hint="@string/xitonghuiweininshaixuanbaohanmubiaojinedeshangpin"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingLeft="10dip"
            android:paddingRight="50dip"
            android:textColor="@color/c9a9a9a"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/txt_fuhao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingHorizontal="5dip"
            android:gravity="center"
            android:text="HKD"
            android:textColor="@color/c9a9a9a"
            android:textSize="@dimen/font_size_12" />

    </FrameLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:nestedScrollingEnabled="false">

    </android.support.v7.widget.RecyclerView>

    <View
        style="@style/dividerLine_horizontal"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvResetAmount"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/chongzhi"
            android:textColor="@color/c3d3a50"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tvFilterAmount"
            style="@style/btn_style_4"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="@string/shaixuan" />

    </LinearLayout>

    <View
        android:id="@+id/viewPopAmountCancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c4e000000" />
</LinearLayout>