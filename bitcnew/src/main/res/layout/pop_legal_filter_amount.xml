                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingLeft="10dip"
                android:paddingRight="50dip"
                android:textColor="@color/c9a9a9a"
                android:textSize="@dimen/font_size_12" />

