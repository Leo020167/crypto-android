<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:id="@+id/fl_no_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_redz_no_content"
        android:scaleType="centerCrop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dip"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:id="@+id/tv_label1"
            android:textSize="@dimen/font_size_13"
            android:textColor="#959595"
            android:text="@string/dangqianmeiyouneirong"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_area1"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_label1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_size_13"
                android:textColor="#959595"
                android:text="@string/dianji"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_dynamic_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_guide"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="@string/sousuo"
                android:textColor="@color/ThemeColor"
                android:textSize="@dimen/font_size_13" />
            <TextView
                android:textSize="@dimen/font_size_13"
                android:textColor="#959595"
                android:text="@string/tianjiaguanzhuqitarendedongtai"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_below="@id/ll_area1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_area2">
            <TextView
                android:textSize="@dimen/font_size_13"
                android:textColor="#959595"
                android:text="@string/huozheziji"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_dynamic_create"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/bg_guide"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/font_size_13"
                android:textColor="@color/ThemeColor"
                android:text="@string/tianjiadongtai"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size_13"
                android:textColor="#959595"
                android:text="@string/fenxiangxinxianshi"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>