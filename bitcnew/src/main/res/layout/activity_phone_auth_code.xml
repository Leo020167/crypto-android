<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pageBackground"
    tools:context=".module.home.PhoneAuthCodeActivity">
    <include layout="@layout/toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="22dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yanzhengmayifasongzhi"
            android:textSize="14sp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:textColor="@color/c666666"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:maxLines="1"
            android:hint="@string/qingshuruyanzhengma"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/border_gray_5dp_1line"/>

        <TextView
            android:id="@+id/txt_sure"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/xiayibu"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"
            android:background="@drawable/border_orange_5dp"/>
    </LinearLayout>
</LinearLayout>