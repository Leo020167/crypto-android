            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/benciyishengou"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txt_benciyishengou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/bencishengyushengouliang"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txt_bencishengyushengouliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/txt_kaishi_time_tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/julibencishengoukaishihaisheng"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txt_kaishi_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/txt_jieshu_time_tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/julibencishengoujieshuhaisheng"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txt_jieshu_time"
