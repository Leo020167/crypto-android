                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/shengoujiage"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txt_duihuanbili"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/woyishengou"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txt_woyishengou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/zuixiaoshengouliang"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txt_zuixiaoshengou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="發起成員"
                android:textColor="@color/c333333"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <com.bitcnew.module.richeditor.RichEditor
                    android:id="@+id/txt_faqichengyuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="項目介紹"
                android:textColor="@color/c333333"
                android:textSize="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <com.bitcnew.module.richeditor.RichEditor
                    android:id="@+id/txt_xiangmujieshao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="幣種介紹"
                android:textColor="@color/c333333"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.bitcnew.module.richeditor.RichEditor
                    android:id="@+id/txt_bizhongjieshao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="項目參與條件"
                android:textColor="@color/c333333"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <com.bitcnew.module.richeditor.RichEditor
                    android:id="@+id/txt_xiangmucanyutiaojian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="風險提示"
                android:textColor="@color/c333333"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
