<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.bitcnew.module.home.XinbishengouDetailActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_tu"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="18dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/c333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_status_0"
                            android:paddingHorizontal="7dp"
                            android:paddingVertical="3dp"
                            android:text="@string/daikaishi"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <com.bitcnew.module.richeditor.RichEditor
                        android:id="@+id/richEditor_jianjie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/jibenxinxi"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/jindu"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/huodongzongliang"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="9dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/border_5fce64_3"
                style="?android:attr/progressBarStyleHorizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txt_baifenbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="0%"
                    android:textColor="#ff999999"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/txt_huodongzongliang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="0"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    android:gravity="right"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="@string/zhuangtai"
                android:textColor="#ff999999"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txt_zhuangtai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                tools:text="进行中"
                android:textColor="#ff333333"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/huodongzongliang"
                android:textColor="#ff999999"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txt_bencikeshengouzongliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/rengoujiage"
                android:textColor="#ff999999"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txt_bencishengyushengouliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/huodongbizhong"
                android:textColor="#ff999999"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txt_huodongbizhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                tools:text="ADA"
                android:textColor="#ff333333"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/jieshoubizhong"
                android:textColor="#ff999999"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txt_jieshoubizhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="USDT"
                android:textColor="#ff333333"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/bencikaishishengoushijian"
                android:textColor="#ff999999"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txt_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/bencijieshushengoushijian"
                android:textColor="#ff999999"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txt_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingHorizontal="5dp"
                android:text="0"
                android:textColor="#ff333333"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/txt_status2"
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_status_0"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="@string/yurezhong"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
