<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FAFAFA"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_tu"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.bitcnew.module.richeditor.RichEditor
                    android:id="@+id/richEditor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_status_0"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="3dp"
                    android:text="@string/daikaishi"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/progress_item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="6dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/border_5fce64_3"
                    style="?android:attr/progressBarStyleHorizontal"/>
                <TextView
                    android:id="@+id/txt_baifenbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:text="0%"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    android:layout_marginLeft="9dp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shengouzongliang"
                android:textColor="#ff666666"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/txt_shengouzongliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/bencikeshengouzongliang"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/txt_bencikeshengouzongliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/kaishishijian"
                android:textColor="#ff666666"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txt_s_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff666666"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/jieshushijian3"
                android:textColor="#ff666666"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/txt_e_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff666666"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>